@{
    ViewData["Title"] = "Modify Destination";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header"><h6 class="m-0 font-weight-bold text-primary">Modify Shipment Destination</h6></div>
    <div class="card-body">
        <form asp-action="ModifyDestination" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Waybill Number</label>
                <input name="waybillNumber" class="form-control" placeholder="Enter waybill to modify" required />
            </div>
            <div class="form-group">
                <label>New Destination Terminal</label>
                <select name="newDestinationId" asp-items="ViewBag.Locations" class="form-control" required>
                    <option value="">-- Select New Destination --</option>
                </select>
            </div>
            <div class="form-group">
                <label>Reason for Modification</label>
                <textarea name="reason" class="form-control" rows="3" placeholder="Provide a clear reason..." required></textarea>
            </div>
            <button type="submit" class="btn btn-warning">Update Destination</button>
        </form>
    </div>
</div>