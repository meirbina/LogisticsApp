@model SMS.Models.ViewModels.MarkDistributionVM

@{
ViewData["Title"] = "Mark Distribution";
Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
int sl = 1;
}

<!-- Notification Area -->
@if (TempData["success"] != null)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["success"]<button type="button" class="close" data-dismiss="alert">×</button></div>
}
@if (TempData["error"] != null)
{
<div class="alert alert-danger alert-dismissible fade show" role="alert">@TempData["error"]<button type="button" class="close" data-dismiss="alert">×</button></div>
}

<div class="row">
    <!-- Left Column: Add Mark Distribution -->
    <div class="col-md-5">
        <div class="card card-primary">
            <div class="card-header"><h3 class="card-title"><i class="fas fa-plus"></i> Add Mark Distribution</h3></div>
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                    <div class="form-group">
                        <label asp-for="NewMarkDistribution.BranchId"></label> <span class="text-danger">*</span>
                        <select asp-for="NewMarkDistribution.BranchId" asp-items="@Model.BranchList" class="form-control">
                            <option disabled selected value="">Select Branch</option>
                        </select>
                        <span asp-validation-for="NewMarkDistribution.BranchId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewMarkDistribution.Name"></label> <span class="text-danger">*</span>
                        <input asp-for="NewMarkDistribution.Name" class="form-control" placeholder="e.g., CA1, Midterm Exam" />
                        <span asp-validation-for="NewMarkDistribution.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Right Column: Mark Distribution List -->
    <div class="col-md-7">
        <div class="card card-info">
            <div class="card-header"><h3 class="card-title"><i class="fas fa-list"></i> Mark Distribution List</h3></div>
            <div class="card-body">
                <table id="markDistTable" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Branch</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.MarkDistributionList)
                    {
                        <tr>
                            <td>@(sl++)</td>
                            <td>@item.Branch?.BranchName</td>
                            <td>@item.Name</td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-primary editButton" data-id="@item.Id" data-toggle="modal" data-target="#editModal" title="Edit"><i class="fas fa-pencil-alt"></i></button>
                                    <button type="button" class="btn btn-sm btn-outline-danger deleteButton" data-id="@item.Id" data-toggle="modal" data-target="#deleteModal" title="Delete"><i class="fas fa-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- ======================= MODALS ======================= -->

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" id="edit_Id" />
                <div class="modal-header">
                    <h5 class="modal-title">Edit Mark Distribution</h5>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="edit_BranchId">Branch</label> <span class="text-danger">*</span>
                        <select name="BranchId" id="edit_BranchId" class="form-control" asp-items="@Model.BranchList"></select>
                    </div>
                    <div class="form-group">
                        <label for="edit_Name">Name</label> <span class="text-danger">*</span>
                        <input name="Name" id="edit_Name" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger"><h5 class="modal-title">Confirm Delete</h5></div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this mark distribution?</p>
                    <input type="hidden" id="deleteId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    $(function () {
        $('#markDistTable').DataTable({ "responsive": true, "autoWidth": false });

        // Handle Edit Button Click to populate modal
        $('.editButton').on('click', function () {
            var id = $(this).data('id');
            $.ajax({
                url: `/MarkDistribution/GetMarkDistribution?id=${id}`,
                type: 'GET',
                success: function (data) {
                    if (data) {
                        $('#edit_Id').val(data.id);
                        $('#edit_Name').val(data.name);
                        $('#edit_BranchId').val(data.branchId);
                    }
                },
                error: function () {
                    alert('Error fetching data for edit.');
                }
            });
        });

        // Handle Delete Button Click to set ID in modal
        $('.deleteButton').on('click', function () {
            var id = $(this).data('id');
            $('#deleteId').val(id);
        });
    });
</script>
}