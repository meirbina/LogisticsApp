@model SMS.Models.ViewModels.UserProfileVM
@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"><h1>User Profile</h1></div>
            <div class="col-sm-6"><ol class="breadcrumb float-sm-right"><li class="breadcrumb-item">User Account</li><li class="breadcrumb-item active">User Profile</li></ol></div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">
                <div class="text-center"><i class="fas fa-user-circle fa-5x text-secondary"></i></div>
                <h3 class="profile-username text-center">@Model.FirstName @Model.LastName</h3>
                <p class="text-muted text-center">@Model.Roles</p>

                <ul class="list-group list-group-unbordered mb-3">
                    <li class="list-group-item"><b>First Name</b> <a class="float-right text-dark">@Model.FirstName</a></li>
                    <li class="list-group-item"><b>Last Name</b> <a class="float-right text-dark">@Model.LastName</a></li>
                    <li class="list-group-item"><b>Gender</b> <a class="float-right text-dark">@Model.Gender</a></li>
                    <li class="list-group-item"><b>Email</b> <a class="float-right text-dark">@Model.Email</a></li>
                    <li class="list-group-item"><b>Mobile Number</b> <a class="float-right text-dark">@Model.MobileNumber</a></li>
                    <li class="list-group-item"><b>Location</b> <a class="float-right text-dark">@Model.Location</a></li>
                </ul>

                <div class="float-right">
                    <a asp-action="ChangePassword" class="btn btn-primary"><i class="fas fa-key"></i> <b>Change Password</b></a>
                </div>
            </div>
        </div>
    </div>
</section>