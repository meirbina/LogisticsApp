@model SMS.Models.ViewModels.ServiceTypeVM

@{
    ViewData["Title"] = "Service Types";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <div>
            <h6 class="m-0 font-weight-bold text-primary">Service Type</h6>
        </div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
            <i class="fas fa-plus"></i> Add Service Type
        </button>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="serviceTypeTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>ID</th>
                <th>Platform Type</th>
                <th>Date Created</th>
                <th>Is Deleted</th>
                <th style="width: 100px;">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.ServiceTypeList)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CreatedDate.ToString("g")</td>
                    <td>@item.IsDeleted</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-warning editButton" data-id="@item.Id" title="Edit"><i class="fas fa-pencil-alt"></i></button>
                            <button type="button" class="btn btn-sm btn-danger deleteButton" data-id="@item.Id" title="Delete"><i class="fas fa-trash"></i></button>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<!-- ==================================================================================== -->
<!--                                        MODALS                                        -->
<!-- ==================================================================================== -->

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Add Service Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="NewServiceType.Name">Enter Platform Type</label>
                        <input asp-for="NewServiceType.Name" class="form-control" />
                        <span asp-validation-for="NewServiceType.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Edit Service Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Id" />
                    <div class="form-group">
                        <label for="editName">Platform Type</label>
                        <input id="editName" name="Name" class="form-control" />
                    </div>
                    <!-- The IsDeleted flag is managed by the Delete button, not usually edited directly -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this service type?</p>
                    <input type="hidden" id="deleteId" name="Id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable for sorting, filtering, etc.
            $('#serviceTypeTable').DataTable();

            // Handle Edit Button Click
            $('.editButton').on('click', function () {
                var id = $(this).data('id');
                $.getJSON('/ServiceType/GetServiceType/' + id, function (data) {
                    $('#editId').val(data.id);
                    $('#editName').val(data.name);
                    $('#editModal').modal('show');
                });
            });

            // Handle Delete Button Click
            $('.deleteButton').on('click', function () {
                var id = $(this).data('id');
                $('#deleteId').val(id);
                $('#deleteModal').modal('show');
            });
        });
    </script>
}