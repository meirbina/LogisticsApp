@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_LayoutLogin";
}

<div class="login-card">
    <div class="login-header">
        <img src="~/images/MeirbinaLogo.jpeg" alt="Meirbina Logo" class="login-logo" />
        <p>Welcome To</p>
        <h1>EduSyncron</h1>
    </div>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">Email address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-2">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password" class="form-label">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-password-link">Forgot password?</a>

        <div class="d-grid">
            <button id="login-submit" type="submit" class="btn btn-primary btn-lg btn-login-main">LOG IN</button>
        </div>

        <div class="divider"></div>

        <!-- Social Login Section -->
        <div class="social-login-buttons">
            <a href="#" class="btn-social"><i class="fab fa-apple"></i></a>
            <a href="#" class="btn-social"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="btn-social"><i class="fab fa-spotify"></i></a>
            <a href="#" class="btn-social"><i class="fab fa-google"></i></a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





